{
    ".grow-relative": {
        "flexProps": {
            "flexGrow": 1
        },
        "height": null,
        "width": null
    },
    ".grow": {
        "&-absolute": {
            "height": null,
            "width": null,
            "flexProps": {
                "positionType": "ABSOLUTE"
            },
            "right": 0,
            "left": 0,
            "top": 0,
            "bottom": 0
        }
    },
    ".default": {
        "&-font": {
            "font": {
                "size": 22,
                "bold": false,
                "italic": false,
                "family": "SFProDisplay",
                "style": "Medium"
            },
            ".white": {
                "textColor": "rgba( 255, 255, 255, 1 )",
                ".small": {
                    "font": {
                        "size": 18,
                        "bold": false,
                        "italic": false,
                        "family": "SFProDisplay",
                        "style": "Medium"
                    }
                }
            },
            ".main": {
                "textColor": "${mainColor}"
            }
        }
    },
    ".separator": {
        "height": 1,
        "width": null
    }
}